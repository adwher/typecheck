{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "deno.enable": true,
  "deno.lint": true,
  "deno.enablePaths": [
    "./pipes",
    "./schemas",
    "./utils",
    "*.ts"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  }
}
